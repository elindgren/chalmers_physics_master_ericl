variable dfile string data.fccCu

units metal
boundary p p p
atom_style atomic
read_data ${dfile}

pair_style eam/fs
pair_coeff * * ../Mendelev_Cu2_2012.eam.fs Cu

group copper type 1
group Cu type 1

mass 1 63.546

thermo 1
thermo_style custom  step temp pe ke etotal press vol lx
fix 1 all box/relax iso 0.0 vmax 0.001
min_style cg
minimize 0.0 0.0 100 1000

#dump 1 all custom  100000 dump.ini  id x y z
minimize 0.0 0.0 1 1

write_data ${dfile}-gopted